if sign == '1': #+
     p1 = float(input("Enter first number: "))
     p2 = float(input("Enter second number: "))
     print (p1, " + ",p2, " = ", p1+p2 )
elif sign == '2': #-
     s1 = float(input("Enter minued nimber: "))
